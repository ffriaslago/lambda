#lang sicp ; Installation of sicp package for correct use of it! (set-cdr! works)

(define (append! x y)
  (set-cdr! (last-pair x) y)
  x)

(define (last-pair x)
  (if (null? (cdr x))
      x
      (last-pair (cdr x))))

(define x (list 'a 'b))
(define y (list 'c 'd))
(define z (append x y))

z ; (a b c d)

(cdr x) ; (b)

(last-pair x) ; (b)

(define w (append! x y))

w ; (a b c d)

(cdr x) ; (b c d)

